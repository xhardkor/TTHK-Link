<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="TTHK_Link.Pages.RegisterPage"
    Title="Register">

    <VerticalStackLayout Padding="20" Spacing="12">
        <Entry Placeholder="Username" Text="{Binding Username}" />
        <Entry Placeholder="Password" IsPassword="True" Text="{Binding Password}" />
        <Entry Placeholder="Group / Course (nt TiTge24)" Text="{Binding GroupId}" />

        <Label Text="{Binding Error}" TextColor="Red" />

        <Button Text="Create account" Command="{Binding RegisterCommand}" />
        <Button Text="Back" Command="{Binding BackCommand}" />
    </VerticalStackLayout>
</ContentPage>
